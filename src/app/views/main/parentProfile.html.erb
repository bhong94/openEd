    </head>
    <body data-spy="scroll" data-target="#navbarResponsive">
      <header>
        <!-- NAVBAR SECTION -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top">
          
          <h2 class="navbar-brand">OpenEd</h2>
          <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarResponsive">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <span class="navbar-nav mr-auto">       <!-- This is a spacer to move dropdown menu to the right -->
            </span>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Mrs. Johnson
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Dashboard</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                    </div>
                </li>
                <li class="nav-item">
                    <%= link_to 'Login', main_login_path, :class => "nav-link" %>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Logout</a>
                </li>
            </ul>
          </div>
        </nav>
        <!-- END NAVBAR SECTION -->

        <!-- TAB SECTION -->
        <div id="tab" class="text-center">
            <ul class="nav nav-tabs">
                <li class="sect"><a class="nav-item nav-link active" data-toggle="tab" role="tab" href="#dash">Dashboard</a></li>
                <li class="sect"><a class="nav-item nav-link" data-toggle="tab" role="tab" href="#search">Search Tutors</a></li>
                <li class="sect"><a class="nav-item nav-link" data-toggle="tab" role="tab" href="#recommended">Recommended Tutors</a></li>
            </ul>
            
            <div class="tab-content">
                <div id="dash" class="tab-pane active">

                    <div class="wrapper">
                        <nav id="sidebar">
                            <div class="sidebar-header">
                                <h3>Dashboard</h3>
                            </div>
                            <ul class="list-unstyled components">
                                <p>Dummy Heading</p>
                                <li><a href="#">option 1</a></li>
                                <li><a href="#">option 2</a></li>
                                <li><a href="#">option 3</a></li>
                                <li><a href="#">option 4</a></li>
                            </ul>
                        </nav>
                        <div id="dashboard-sect">
                            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                                <div class="container-fluid">
                                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                                        <i class="fas fa-align-left"></i>
                                        <span>Toggle Sidebar</span>
                                    </button>
                                </div>
                            </nav>
                        </div>
                    </div>

                </div>
                <div id="search" class="tab-pane fade">
                    
                </div>
                <div id="recommended" class="tab-pane fade">

                </div>
            </div>

        </div>   
        <!-- END TAB SECTION -->
      </header>

      

      <footer>
        <div class="container">
          <p>Brandon Hong - Copyright &copy; 2019</p>
        </div>
      </footer>

      <!-- Script Sources -->
      <%= javascript_include_tag 'jquery-3.3.1.min.js' %>
      <%= javascript_include_tag 'bootstrap.min.js' %>
      <%= javascript_include_tag 'https://use.fontawesome.com/releases/v5.5.0/js/all.js' %>
    </body>
  </html>
