<!DOCTYPE html>
  <html lang="en">
    <head>
      <title>OpenEd</title>

      <!--  css-->
      <%= stylesheet_link_tag 'bootstrap.min.css' %>
      <%= stylesheet_link_tag 'style.css' %>
      <%= stylesheet_link_tag 'login_style.css' %>

    </head>
    <body data-spy="scroll" data-target="#navbarResponsive">
      <header>
        <!-- NAVBAR SECTION -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top">
          
          <h2 class="navbar-brand">OpenEd</h2>
          <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarResponsive">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <span class="navbar-nav mr-auto">       <!-- This is a spacer to move dropdown menu to the right -->
            </span>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Mrs. Johnson
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Dashboard</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                    </div>
                </li>
                <li class="nav-item">
                    <%= link_to 'Login', main_login_path, :class => "nav-link" %>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Logout</a>
                </li>
            </ul>
          </div>
        </nav>
        <!-- END NAVBAR SECTION -->

        <!-- LOGIN SECTION -->
        <div id="login" class="text-center">
            <!-- The login page -->
            <form action= ""  method="">
                <div class="imgcontainer">
	                <%= image_tag 'openEd.png' %>    
                </div>

                <div class="container">
                    <label for="uname"><b>Username</b></label>
                    <input type="text" placeholder="Enter Username" name="uname" >

                    <label for="psw"><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" name="psw" >

                    <button type="submit">Login</button>
                    <button type="submit">Sign Up</button>
                    <%= link_to 'View Example Parent Profile', main_parentProfile_path %>
                </div>
            </form>
        </div>   
        <!-- END LOGIN SECTION -->
      </header>

      

      <footer>
        <div class="container">
          <p>Brandon Hong - Copyright &copy; 2019</p>
        </div>
      </footer>

      <!-- Script Sources -->
      <%= javascript_include_tag 'bootstrap.min.js' %>
    </body>
  </html>
