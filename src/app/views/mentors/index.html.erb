<p id="notice"><%= notice %></p>

<h1>Mentors</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Bio</th>
      <th>Hourlywage</th>
      <th>Collegename</th>
      <th>Major</th>
      <th>Collegeyear</th>
      <th>Resume</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        <td><%= mentor.firstName %></td>
        <td><%= mentor.lastName %></td>
        <td><%= mentor.bio %></td>
        <td><%= mentor.hourlyWage %></td>
        <td><%= mentor.collegeName %></td>
        <td><%= mentor.major %></td>
        <td><%= mentor.collegeYear %></td>
        <td><%= mentor.resume %></td>
        <td><%= link_to 'Show', mentor %></td>
        <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
        <td><%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

